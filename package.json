  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/express": "^4.11.0",
    "@types/http-status-codes": "^1.0.29",
    "@types/jest": "^21.1.9",
    "@types/lodash": "^4.14.91",
    "@types/mongoose": "^4.7.30",
    "@types/node": "^8.0.34",
    "@types/sinon": "^4.1.2",
    "@types/supertest": "^2.0.4",
    "depcheck": "^0.6.8",
    "jest": "^22.0.3",
    "nodemon": "^1.14.1",
    "nsp": "^3.1.0",
